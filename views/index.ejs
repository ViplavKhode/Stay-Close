<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stay Close</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/ui.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.css"
        integrity="sha512-h9FcoyWjHcOcmEVkxOfTLnmZFWIH0iZhZT1H2TbOq55xssQGEJHEaIm+PgoUaZbRvQTNTluNOEfb1ZRy6D3BOw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <!-- Onboarding Modal -->
    <div id="modal-overlay">
        <div class="glass-modal">
            <h2>Welcome to Stay Close</h2>
            <div class="input-group">
                <input type="text" id="username-input" class="glass-input" placeholder="Enter your name..."
                    maxlength="15">
            </div>
            <button id="join-btn" class="glass-btn">Join Map</button>
        </div>
    </div>

    <!-- Connected Users Panel -->
    <div id="user-panel" class="glass-panel">
        <div class="panel-header">
            <span class="panel-title">Active Users</span>
            <span id="user-count" class="user-count">0</span>
        </div>
        <ul id="user-list" class="user-list">
            <!-- Users will be added here via JS -->
        </ul>
    </div>

    <div id="map"></div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.js"
        integrity="sha512-puJW3E/qXDqYp9IfhAI54BJEaWIfloJ7JWs7OeD5i6ruC9JZL1gERT1wjtwXFlh7CjE7ZJ+/vcRZRkIYIb6p4g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="https://cdn.socket.io/3.1.3/socket.io.min.js"
        integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh"
        crossorigin="anonymous"></script>
    <script src="/js/ui.js"></script>
    <script src="/js/script.js"></script>
</body>

</html>